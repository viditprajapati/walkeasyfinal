@model walkeasyfinal.Models.Shoes
@{
    ViewData["Title"] = "Add Shoes";
}

<h2>Add Shoes</h2>
<a href="@Url.Action("Dashboard", "Admin")" class="back-button">Back to Home</a>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
<form asp-action="AddShoe" asp-controller="Shoe" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label>Shoes Name</label>
        <input asp-for="ShoesName" class="form-control" />
        <span asp-validation-for="ShoesName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Image</label>
        <input type="file" asp-for="ImageFile" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Category</label>
        <select asp-for="Category" class="form-control">
            <option value="">-- Select Category --</option>
            <option value="Sneaker">Sneakers</option>
            <option value="Sports">Sports</option>
            <option value="Causal">Casual</option>
            <option value="Formal">Formal</option>
           
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label>Amount</label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"   />
}