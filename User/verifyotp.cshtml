@model walkeasyfinal.Models.User;
@{
    ViewData["Title"] = "Verify OTP";
}

<div class="logo-container">
    <img src="~/images/logo.png" alt="Logo">
</div>

<div class="verify-container">
    <h2>Verify OTP</h2>

    <form asp-action="VerifyOtp" method="post">
        <input type="hidden" name="email" value="@ViewBag.Email" />

        <div class="form-group">
            <label>Enter OTP</label>
            <input type="text" name="otp" class="form-control" required />
        </div>

        <button type="submit" class="btn-primary">Verify</button>
        <button type="button" class="btn-secondary" onclick="goBack()">Back</button>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="text-danger mt-2">@ViewData.ModelState[""].Errors.FirstOrDefault()?.ErrorMessage</div>
        }

        <div>
            @Html.ValidationSummary(true)
        </div>
    </form>
</div>

<script>
    function goBack() {
        if (document.referrer !== "") {
            window.location = document.referrer;
        } else {
            history.back();
        }
    }
</script>

<style>
    body {
        background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        height: 100vh;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .logo-container {
        position: absolute;
        top: 20px;
        left: 20px;
    }

        .logo-container img {
            width: 180px;
            height: auto;
        }

    .verify-container {
        background-color: #ffffff;
        border-radius: 12px;
        padding: 40px;
        width: 400px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        text-align: center;
        animation: fadeIn 0.6s ease-in-out;
    }

        .verify-container h2 {
            margin-bottom: 25px;
            color: #333;
            font-weight: 600;
        }

    .form-group {
        text-align: left;
        margin-bottom: 20px;
    }

        .form-group label {
            font-weight: 500;
            color: #444;
        }

    .form-control {
        width: 100%;
        padding: 12px;
        border-radius: 8px;
        border: 1px solid #ccc;
        font-size: 15px;
        transition: 0.3s ease;
    }

        .form-control:focus {
            border-color: #4a90e2;
            box-shadow: 0 0 6px rgba(74, 144, 226, 0.3);
            outline: none;
        }

    .btn-primary {
        width: 100%;
        padding: 12px;
        background-color: #2c3e50;
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
        margin-top: 10px;
    }

        .btn-primary:hover {
            background-color: #1a252f;
            transform: scale(1.03);
        }

    .btn-secondary {
        width: 100%;
        padding: 10px;
        margin-top: 10px;
        border: 2px solid #2c3e50;
        background: transparent;
        color: #2c3e50;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #2c3e50;
            color: white;
        }

    .text-danger {
        margin-top: 12px;
        color: red;
        font-size: 14px;
        font-weight: 500;
    }


    }
</style>
