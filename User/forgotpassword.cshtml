@{
    ViewData["Title"] = "Forgot Password";
}

<div class="logo-container">
    <img src="~/images/logo.png" alt="Logo">
</div>

<div class="login-container">
    <h2>Forgot Password</h2>
    <form method="post" asp-action="ForgotPassword">
        <div class="form-group">
            <label>Email</label>
            <input type="email" name="email" class="form-control" required />
        </div>

        <button type="submit" class="btn-primary">Send OTP</button>

        <button type="button" class="btn-secondary mt-2" onclick="goBack()">Back</button>
    </form>

    <div>
        @Html.ValidationSummary(true)
    </div>
</div>

<script>
    function goBack() {
        if (document.referrer !== "") {
            window.location = document.referrer;
        } else {
            history.back();
        }
    }
</script>

<style>
    body {
        background: linear-gradient(135deg, #f2f2f2, #e3e3e3);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }

    .logo-container {
        position: absolute;
        top: 20px;
        left: 20px;
    }

        .logo-container img {
            width: 200px;
            height: auto;
        }

    .login-container {
        background-color: #ffffff;
        border-radius: 12px;
        padding: 40px;
        width: 380px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        animation: fadeIn 0.6s ease-in-out;
        text-align: center;
    }

        .login-container h2 {
            color: #222;
            margin-bottom: 25px;
            font-weight: 600;
        }

    .form-group {
        text-align: left;
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #333;
            font-weight: 500;
        }

    .form-control {
        width: 100%;
        padding: 12px;
        border-radius: 8px;
        border: 1px solid #ccc;
        font-size: 15px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus {
            border-color: #0077b6;
            box-shadow: 0 0 6px rgba(0, 119, 182, 0.3);
            outline: none;
        }

    .btn-primary {
        width: 100%;
        padding: 12px;
        background-color: #343a40;
        color: #ffffff;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-primary:hover {
            background-color: #1d2124;
            transform: scale(1.03);
        }

    .btn-secondary {
        margin-top: 10px;
        background-color: transparent;
        border: 2px solid #343a40;
        color: #343a40;
        padding: 10px;
        border-radius: 8px;
        font-weight: 600;
        width: 100%;
        cursor: pointer;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #343a40;
            color: white;
        }

   
    }

    }
</style>
