@model walkeasyfinal.Models.Registration

@{
    ViewData["Title"] = "Update Profile";
}

<style>
    body {
        background: linear-gradient(to right, #fff0f5, #ffe4ee);
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        padding: 0;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 90vh;
        background-color: transparent;
    }

    .card {
        background-color: lightskyblue;
        padding: 35px;
        border-radius: 20px;
        box-shadow: 0 16px 40px rgba(0, 0, 0, 0.15);
        width: 520px;
        transition: box-shadow 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
        }

        .card h2 {
            color: #fff;
            text-align: center;
            font-size: 30px;
            font-weight: 700;
            margin-bottom: 25px;
            letter-spacing: 0.5px;
        }

    .form-container {
        background-color: #fff;
        border-radius: 15px;
        padding: 32px;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 22px;
        box-shadow: inset 0 0 4px rgba(0, 0, 0, 0.05);
    }

        .form-container label {
            font-weight: 600;
            margin-bottom: 6px;
            font-size: 14px;
            color: #333;
        }

        .form-container input[type="text"],
        .form-container input[type="email"],
        .form-container input[type="password"] {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 14px;
            box-sizing: border-box;
            transition: all 0.3s ease;
        }

        .form-container input:focus {
            border-color: lightskyblue;
            box-shadow: 0 0 6px lightskyblue);
            outline: none;
        }

    .full-width {
        grid-column: span 2;
    }

    .gender-group {
        display: flex;
        align-items: center;
        gap: 18px;
    }

        .gender-group label {
            font-weight: normal;
            font-size: 14px;
            display: flex;
            align-items: center;
        }

    .btn-submit {
        grid-column: span 2;
        background-color: steelblue;
        color: white;
        padding: 13px;
        border: none;
        border-radius: 10px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-submit:hover {
            background-color: powderblue
            transform: translateY(-1px);
        }

    .text-success {
        color: #28a745;
        margin-bottom: 10px;
        grid-column: span 2;
        text-align: center;
        font-weight: 600;
        font-size: 15px;
    }

    span.field-validation-error {
        color: #e3342f;
        font-size: 0.85em;
        display: block;
        margin-top: 4px;
    }

</style>

<div class="container">
    <div class="card">
        <h2>Update Profile</h2>

        <form asp-action="UpdateProfile" method="post" class="form-container">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="text-success">@TempData["SuccessMessage"]</div>
            }

            <input type="hidden" asp-for="UserId" />

            <div>
                <label>Name</label>
                <input type="text" asp-for="Name" required />
                <span asp-validation-for="Name"></span>
            </div>

            <div>
                <label>Email</label>
                <input type="email" asp-for="Email" readonly />
            </div>

            <div>
                <label>Address</label>
                <input type="text" asp-for="Address" required />
                <span asp-validation-for="Address"></span>
            </div>

            <div>
                <label>Mobile Number</label>
                <input type="text" asp-for="Mobilenumber" required />
                <span asp-validation-for="Mobilenumber"></span>
            </div>

            <div class="gender-group full-width">
                <label>Gender:</label>
                <label><input type="radio" asp-for="Gender" value="Male" /> Male</label>
                <label><input type="radio" asp-for="Gender" value="Female" /> Female</label>
                <label><input type="radio" asp-for="Gender" value="Other" /> Other</label>
                <span asp-validation-for="Gender"></span>
            </div>

            <div class="full-width">
                <label>New Password</label>
                <input type="password" asp-for="Password" placeholder="Leave empty to keep current password" />
                <span asp-validation-for="Password"></span>
            </div>

            <button type="submit" class="btn-submit">Update Profile</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}