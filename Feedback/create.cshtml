@model walkeasyfinal.Models.Feedback

@{
    ViewData["Title"] = "Feedback";
}

<style>
    body {
        background: linear-gradient(to right, #eef2f3, #cfd9df);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 600px;
        margin: 60px auto;
        background-color: #ffffff;
        border-radius: 20px;
        padding: 45px 40px;
        box-shadow: 0 12px 32px rgba(0, 0, 0, 0.15);
        transition: box-shadow 0.3s ease;
    }

        .container:hover {
            box-shadow: 0 16px 40px rgba(0, 0, 0, 0.2);
        }

    h2 {
        text-align: center;
        color: #222;
        margin-bottom: 35px;
        font-size: 30px;
        font-weight: 700;
        letter-spacing: 0.5px;
    }

    .form-group {
        margin-bottom: 24px;
    }

    .form-label,
    label {
        font-weight: 600;
        color: #333;
        display: block;
        margin-bottom: 8px;
        font-size: 15px;
    }

    .form-control {
        width: 100%;
        padding: 13px 14px;
        border-radius: 10px;
        border: 1px solid #ccc;
        font-size: 15px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus {
            border-color: #4a4a4a;
            box-shadow: 0 0 8px rgba(74, 74, 74, 0.25);
            outline: none;
        }

    .rating-container {
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
        margin-top: 6px;
    }

        .rating-container label {
            background-color: #f7f7f7;
            border-radius: 8px;
            padding: 10px 14px;
            cursor: pointer;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 6px;
            border: 1px solid #ccc;
            transition: all 0.2s ease;
            font-size: 14.5px;
        }

        .rating-container input[type="radio"] {
            display: none;
        }

            .rating-container input[type="radio"]:checked + label {
                background-color: #007bff;
                color: #fff;
                border-color: #007bff;
                box-shadow: 0 2px 8px rgba(0, 123, 255, 0.3);
            }

    .btn-primary {
        width: 100%;
        background-color: #007bff;
        color: white;
        font-size: 17px;
        padding: 14px;
        border-radius: 10px;
        border: none;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: translateY(-1px);
        }

    .alert {
        background-color: #d1ecf1;
        color: #0c5460;
        border: 1px solid #bee5eb;
        border-radius: 8px;
        padding: 12px;
        text-align: center;
        margin-bottom: 24px;
        font-weight: 500;
    }

    .back-link {
        text-align: center;
        display: block;
        margin-top: 22px;
        color: #007bff;
        font-weight: 500;
        text-decoration: none;
        transition: color 0.2s ease;
    }

        .back-link:hover {
            color: #0056b3;
            text-decoration: underline;
        }

    button.back-btn {
        background: none;
        color: #007bff;
        border: 2px solid #007bff;
        padding: 8px 18px;
        border-radius: 8px;
        font-weight: 600;
        margin-bottom: 24px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        button.back-btn:hover {
            background-color: #007bff;
            color: white;
        }
</style>

<div class="container">
    <h2>Submit Feedback</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert">@TempData["SuccessMessage"]</div>
    }

    <button class="back-btn" onclick="goBack()">← Back</button>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" readonly />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" readonly />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Rating" class="form-label">Rating</label>
            <div class="rating-container">
                <input type="radio" id="r1" name="Rating" value="1" required />
                <label for="r1">😞 Poor</label>

                <input type="radio" id="r2" name="Rating" value="2" />
                <label for="r2">😐 Fair</label>

                <input type="radio" id="r3" name="Rating" value="3" />
                <label for="r3">🙂 Good</label>

                <input type="radio" id="r4" name="Rating" value="4" />
                <label for="r4">😁 Very Good</label>

                <input type="radio" id="r5" name="Rating" value="5" />
                <label for="r5">🤩 Excellent</label>
            </div>
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Comment"></label>
            <textarea asp-for="Comment" class="form-control" rows="4" placeholder="Write your feedback..."></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit Feedback</button>

        <a asp-action="Index" class="back-link">Back to Feedback List</a>
    </form>
</div>

<script>
    function goBack() {
        if (document.referrer !== "") {
            window.location = document.referrer;
        } else {
            history.back();
        }
    }
</script>
